<div id="feedback-container"
    class="govuk-!-padding-left-9 govuk-!-padding-right-9 govuk-!-padding-top-4 govuk-!-padding-bottom-4 govuk-!-margin-top-6"
    style="background-color: #f3f2f1; border-top: 1px solid #0b0c0c;">

    <style>
        /* Hide all checkboxes visually but keep them accessible */
        .feedback-control {
            position: absolute;
            opacity: 0;
            z-index: -1;
        }

        /* Initial state - only show the main feedback question */
        #feedback-thanks-old,
        #feedback-thanks-new,
        #feedback-form {
            display: none;
        }

        /* When "yes" is checked, show the positive feedback form */
        #feedback-yes:checked~#feedback-content {
            display: none;
        }

        #feedback-yes:checked~#feedback-thanks-new {
            display: block;
        }

        /* When "no" is checked, show the negative feedback form */
        #feedback-no:checked~#feedback-content {
            display: none;
        }

        #feedback-no:checked~#feedback-form {
            display: block;
        }

        /* When submit is checked, show the thank you message */
        #feedback-submit-yes:checked~#feedback-thanks-new,
        #feedback-submit-no:checked~#feedback-form {
            display: none;
        }

        #feedback-submit-yes:checked~#feedback-thanks-old,
        #feedback-submit-no:checked~#feedback-thanks-old {
            display: block;
        }

        /* Reset button styling to match govuk buttons */
        .feedback-label-button {
            background-color: #f3f2f1;
            color: #0b0c0c;
            box-shadow: 0 2px 0 #929191;
            padding: 8px 10px 7px;
            border: 2px solid transparent;
            font-size: 16px;
            font-family: "GDS Transport", arial, sans-serif;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            margin-bottom: 0;
        }

        .feedback-label-primary {
            background-color: #00703c;
            color: white;
            box-shadow: 0 2px 0 #002d18;
        }

        .feedback-label-secondary {
            background-color: #f3f2f1;
            color: #0b0c0c;
            box-shadow: 0 2px 0 #929191;
        }

        .feedback-label-cancel {
            background-color: #cbcbcb;
            color: #0b0c0c;
            box-shadow: 0 2px 0 #929191;
        }
    </style>

    <!-- Hidden controls -->
    <input type="radio" id="feedback-yes" name="feedback" class="feedback-control">
    <input type="radio" id="feedback-no" name="feedback" class="feedback-control">
    <input type="radio" id="feedback-submit-yes" name="feedback" class="feedback-control">
    <input type="radio" id="feedback-submit-no" name="feedback" class="feedback-control">
    <input type="radio" id="feedback-cancel" name="feedback" class="feedback-control">

    <!-- Initial question -->
    <div id="feedback-content" style="display: flex; align-items: center; justify-content: space-between;">
        <div style="display: flex; align-items: center; gap: 1rem;">
            <h2 class="govuk-heading-m" style="margin-bottom: 0;">Is this page useful?</h2>
            <button onclick="document.getElementById('feedback-yes').click()"
                class="govuk-button feedback-label-button feedback-label-primary" style="margin-bottom: 0;">Yes</button>
            <button onclick="document.getElementById('feedback-no').click()"
                class="govuk-button feedback-label-button feedback-label-primary" style="margin-bottom: 0;">No</button>
        </div>
    </div>

    <!-- Thank you message (final) -->
    <div id="feedback-thanks-old" class="govuk-heading-m">
        Thank you for your feedback.
    </div>

    <!-- Positive feedback form -->
    <div id="feedback-thanks-new">
        <h2 class="govuk-heading-m">
            Thank you for letting us know
        </h2>

        <div style="background-color: white; padding: 2rem;">
            <h2 class="govuk-heading-s">Can you tell us why this page was useful?</h2>

            <div class="govuk-form-group">
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="info-needed" name="useful" type="checkbox"
                            value="found-info">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;"
                            for="info-needed">
                            I found the information I was looking for
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="easy-find" name="useful" type="checkbox"
                            value="easy-find">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;" for="easy-find">
                            The information was clear and easy to understand
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="easy-understand" name="useful" type="checkbox"
                            value="easy-understand">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;"
                            for="easy-understand">
                            The page was easy to navigate
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="use-again" name="useful" type="checkbox"
                            value="use-again">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;" for="use-again">
                            The information helped me complete what I needed to do
                        </label>
                    </div>
                </div>
            </div>

            <div class="govuk-form-group">
                <h2 class="govuk-heading-m">Is there anything else you can tell us?</h2>
                <div id="more-detail-hint" class="govuk-hint">
                    Do not share any personal or commercially sensitive information like your National Insurance number
                    or credit card details.
                </div>
                <textarea class="govuk-textarea" id="feedback-detail" rows="5"
                    aria-describedby="more-detail-hint"></textarea>
            </div>

            <div class="govuk-button-group">
                <label for="feedback-submit-yes"
                    class="govuk-button feedback-label-button feedback-label-primary">Submit</label>
                <label for="feedback-cancel"
                    class="govuk-button feedback-label-button feedback-label-cancel">Cancel</label>
            </div>
        </div>
    </div>

    <!-- Negative feedback form -->
    <div id="feedback-form">
        <h2 class="govuk-heading-m">
            Thanks for letting us know
        </h2>

        <div style="background-color: white; padding: 2rem;">
            <h2 class="govuk-heading-s">Can you tell us why this page was not useful?</h2>

            <div class="govuk-form-group">
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="info-missing" name="not-useful" type="checkbox"
                            value="info-missing">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;"
                            for="info-missing">
                            I could not find the information I was looking for
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="hard-find" name="not-useful" type="checkbox"
                            value="hard-find">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;" for="hard-find">
                            The information was out of date
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="hard-understand" name="not-useful" type="checkbox"
                            value="hard-understand">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;"
                            for="hard-understand">
                            The information was difficult to understand
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item" style="padding: 0 0 10px 0;">
                        <input class="govuk-checkboxes__input" id="looks-broken" name="not-useful" type="checkbox"
                            value="looks-broken">
                        <label class="govuk-label govuk-checkboxes__label" style="padding-left: 50px;"
                            for="looks-broken">
                            The page had technical problems (such as broken links or did not load properly)
                        </label>
                    </div>
                </div>
            </div>

            <div class="govuk-form-group">
                <h2 class="govuk-heading-m">Is there anything else you can tell us?</h2>
                <div id="more-detail-hint" class="govuk-hint">
                    Do not share any personal or commercially sensitive information like your National Insurance number
                    or credit card details.
                </div>
                <textarea class="govuk-textarea" id="feedback-detail-negative" rows="5"
                    aria-describedby="more-detail-hint"></textarea>
            </div>

            <div class="govuk-button-group">
                <label for="feedback-submit-no"
                    class="govuk-button feedback-label-button feedback-label-primary">Submit</label>
                <label for="feedback-cancel"
                    class="govuk-button feedback-label-button feedback-label-cancel">Cancel</label>
            </div>
        </div>
    </div>
</div>

