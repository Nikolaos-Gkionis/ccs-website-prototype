        }

        .header-top-section {
            justify-content: flex-start !important;
        }

        .global-navigation {
            margin-left: 20px !important;
        }
    }

    /* Mobile navigation styles */
    @media (max-width: 768px) {

        /* Hide the navigation menu by default on mobile */
        .global-navigation {
            display: none;
        }

        /* Show the navigation menu when the toggle button is clicked */
        .global-navigation.is-active {
            display: block;
            background-color: #8FB3FF !important;
            /* Override burgundy with blue */
        }

        /* Change the navigation layout for mobile */
        .nav-list--primary {
            flex-direction: column !important;
            gap: 0 !important;
        }

        .nav-list__item {
            border-bottom: 1px solid #e0e0e0;
            padding: 10px 0;
        }

        .nav-link {
            padding: 8px 0 !important;
            font-size: 16px !important;
        }

        /* Hide dropdowns on mobile devices */
        .dropdown-menu {
            display: none !important;
        }

        /* Remove hover effects on mobile */
        .nav-list__item.has-dropdown:hover .dropdown-menu {
            display: none !important;
        }

        /* Style the menu toggle button */
        .global-navigation__toggler {
            display: block !important;
        }

        /* Hide menu icons by default, show when menu is open */
        .icon-menu-open {
            display: none;
        }

        .icon-menu-closed {
            display: inline-block;
        }

        /* When menu is active, show the open icon */
        .global-navigation__toggler[aria-expanded="true"] .icon-menu-open {
            display: inline-block;
        }

        .global-navigation__toggler[aria-expanded="true"] .icon-menu-closed {
            display: none;
        }
    }

    /* Desktop styles - show navigation and hide toggle button */
    @media (min-width: 769px) {
        .global-navigation {
            display: block !important;
            min-width: 0;
            /* Allow flex shrinking */
        }

        .global-navigation__toggler {
            display: none !important;
        }

        .nav-list--primary {
            overflow: visible;
            /* Ensure all items are visible */
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Menu toggle functionality
        var toggler = document.querySelector('.global-navigation__toggler');
        var nav = document.querySelector('.global-navigation');

        if (toggler && nav) {
            toggler.addEventListener('click', function () {
                var isExpanded = this.getAttribute('aria-expanded') === 'true';

                // Toggle the expanded state
                this.setAttribute('aria-expanded', !isExpanded);

                // Toggle the navigation visibility
                nav.classList.toggle('is-active');

                // Update button text
                var buttonText = this.querySelector('span');
                if (buttonText) {
                    buttonText.textContent = isExpanded ? 'Menu' : 'Close';
                }
            });
        }

        // Hover-based dropdown functionality - only on desktop
        var dropdownItems = document.querySelectorAll('.nav-list__item.has-dropdown');
        dropdownItems.forEach(function (item) {
            var dropdown = item.querySelector('.dropdown-menu');
            var navLink = item.querySelector('.nav-link');

            // Show dropdown on mouse enter (desktop only)
            item.addEventListener('mouseenter', function () {
                // Only show dropdowns on desktop (screen width > 768px)
                if (window.innerWidth > 768 && dropdown) {
                    dropdown.style.display = 'block';
                }
                if (navLink) {
                    navLink.style.textDecoration = 'underline';
                }
            });

            // Hide dropdown on mouse leave (desktop only)
            item.addEventListener('mouseleave', function () {
                // Only hide dropdowns on desktop (screen width > 768px)
                if (window.innerWidth > 768 && dropdown) {
                    dropdown.style.display = 'none';
                }
                if (navLink) {
                    navLink.style.textDecoration = 'none';
                }
            });
        });
    });
</script>

